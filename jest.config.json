{
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "coveragePathIgnorePatterns": [
        "/node_modules",
        "/dist/",
        "__fixtures__",
        "jest.setup.js"
    ],
    "coverageReporters": [
        "json",
        "lcov",
        "text-summary"
    ],
    "presets": [
        "jest-expo"
    ],
    "roots": [
        "<rootDir>/src"
    ],
    "setupFiles": [
        "<rootDir>/jest.setup.js"
    ],
    "testRegex": ".*(test|spec)\\.jsx?$",
    "testPathIgnorePatterns": [
        "/node_modules/"
    ]
} 